



<script src="/Scripts/Samgo/SamgoGameContralController.js"></script>
<body ng-controller="SamgoGameContralController">


    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">遊戲廳控制</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav-item  mr-auto">
                    <li class="dropdown-dropdown" aria-labelledby="navbarDropdown">
                        <a ng-click="showTable='default'" class="btn-link btn">Home </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            資訊
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a ng-click="switchPage('writeDetail')" class="btn-link btn">個人資料 </a>
                            <a ng-click="switchPage('showUser')" class="btn-link btn">所有腳色 </a>
                        </div>
                    </li>

                </ul>
                <form class="form-inline my-2 my-lg-0">

                    <select ng-model="searchText" onChange="setBeerIcon();" class="btn btn-secondary dropdown-toggle">
                        <option ng-repeat="x in LegionArray"
                                value="{{x}}">
                            {{x}}
                        </option>
                    </select>

                    <input class="form-control mr-sm-2" type="search" ng-model="searchText" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" ng-click="searchByKeyword(searchText)" type="submit">Search</button>
                    <input type="button" value="hidden" ng-show="showMore" class="btn" ng-click="showMore=!showMore">

                    <input type="button" value="show" ng-show="!showMore" class="btn" ng-click="showMore=!showMore">
                </form>
            </div>
        </nav>
        <table class="table table-bordered rounded-circle  " ng-if="showTable=='showDetail'">
            <tr>
                <th>編號</th>
                <th>ID</th>
                <th>戰力</th>
                <th>等級</th>
                <th>日期</th>
            </tr>
            <tbody>
                @*<tr ng-repeat="userInfo in userInfoList" ng-class-odd="'ngOdd'" ng-class-even="'ngEven'">*@
                <tr ng-repeat="userInfo in userInfoList">
                    <td><div>{{$index+1}}</div></td>
                    <td><div>{{userInfo.Role}}</div></td>
                    <td><div>{{userInfo.Power}}</div></td>
                    <td><div>{{userInfo.Basilica}}</div></td>
                    <td><div>{{userInfo.Time|date: 'yyyy-MM-dd'}}</div></td>
                </tr>
            </tbody>
        </table>
        <table class="table table-bordered rounded-circle  " ng-show="showTable=='aboutSamgoGame'">
            <thead>
                <tr>
                    <th>編號</th>
                    <th>腳色</th>
                    <th>第二次戰力</th>
                    <th>第一次戰力</th>
                    <th>差異</th>
                    <th>軍團</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="SamgoPower in SamgoPowers" ng-class-odd="'ngOdd'" ng-class-even="'ngEven'">

                    <td><div>{{ $index+1}}</div></td>
                    <td><div>{{ SamgoPower.Role}}</div></td>
                    <td><div>{{ SamgoPower.SecondPower}}</div></td>
                    <td><div>{{ SamgoPower.FirstPower}}</div></td>
                    <td><div>{{ SamgoPower.Diff}}</div></td>
                    <td><div>{{ SamgoPower.Legion}}</div></td>
                </tr>
            </tbody>
        </table>
        <table class="table table-bordered rounded-circle  ">
            <tr>
                <td>
                    <input type="text" width="100" value="" id="text1" onchange="changeImage(1)" />
                </td>
                <td>
                    <input type="text" width="100" value="" id="text2" onchange="changeImage(2)" />
                </td>
                <td>
                    <input type="text" width="100" value="" id="text3" onchange="changeImage(3)" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="text" width="100" value="" id="text4" onchange="changeImage(4)" />
                </td>
                <td>
                    <input type="text" width="100" value="" id="text5" onchange="changeImage(5)" />
                </td>
                <td>
                    <input type="text" width="100" value="" id="text6" onchange="changeImage(6)" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="text" width="100" value="" id="text7" onchange="changeImage(7)" />
                </td>
                <td>
                    <input type="text" width="100" value="" id="text8" onchange="changeImage(8)" />
                </td>
                <td>
                    <input type="text" width="100" value="" id="text9" onchange="changeImage(9)" />
                </td>
            </tr>
        </table>

    </div>
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td>
                <img id="img1" width="100" height="100" src="~/image/Qrcode/MyInfo.png" />
            </td>
            <td>
                <img id="img2" width="100" height="100" src="~/image/Qrcode/MyInfo.png" />
            </td>
            <td>
                <img id="img3" width="100" height="100" src="~/image/Qrcode/MyInfo.png" />
            </td>
        </tr>
        <tr>
            <td>
                <img id="img4" width="100" height="100" src="~/image/Qrcode/MyInfo.png" />
            </td>
            <td>
                <img id="img5" width="100" height="100" src="~/image/Qrcode/MyInfo.png" />
            </td>
            <td>
                <img id="img6" width="100" height="100" src="~/image/Qrcode/MyInfo.png" />
            </td>
        </tr>
        <tr>
            <td>
                <img id="img7" width="100" height="100" src="~/image/Qrcode/MyInfo.png" />
            </td>
            <td>
                <img id="img8" width="100" height="100" src="~/image/Qrcode/MyInfo.png" />
            </td>
            <td>
                <img id="img9" width="100" height="100" src="~/image/Qrcode/MyInfo.png" />
            </td>
        </tr>
    </table>
    <script language="javascript">

        var picTar = Math.floor((Math.random() * 100 % 2 + 2));
        var targetPath = "../image/SamgoGame/Girl/" + picTar + "/";
        console.log(picTar);
        function changeImage(data) {
            var q = data;// document.getElementById('text' + data).value;
            if (q == 1) {
                document.getElementById('img1').src = targetPath + "all_part1x1.jpg";
            } else if (q == 2) {
                document.getElementById('img2').src = targetPath + "all_part1x2.jpg";
            } else if (q == 3) {
                document.getElementById('img3').src = targetPath + "all_part1x3.jpg";
            } else if (q == 4) {
                document.getElementById('img4').src = targetPath + "all_part2x1.jpg";
            } else if (q == 5) {
                document.getElementById('img5').src = targetPath + "all_part2x2.jpg";
            } else if (q == 6) {
                document.getElementById('img6').src = targetPath + "all_part2x3.jpg";
            } else if (q == 7) {
                document.getElementById('img7').src = targetPath + "all_part3x1.jpg";
            } else if (q == 8) {
                document.getElementById('img8').src = targetPath + "all_part3x2.jpg";
            } else if (q == 9) {
                document.getElementById('img9').src = targetPath + "all_part3x3.jpg";
            }
        }


    </script>
</body>
